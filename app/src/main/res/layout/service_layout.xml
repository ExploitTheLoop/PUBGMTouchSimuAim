<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/layout_base">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/layout_controll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/image_view_controll"
            android:src="@mipmap/ic_launcher"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_alignParentTop="true"
            android:background="@color/azure_radiance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:text="SETTINGS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/layout_close"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_baseline_close_24"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="CLOSE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/layout_hide"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_baseline_indeterminate_check_box_24"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="HIDE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_below="@id/layout_header"
            android:background="@color/woodsmoke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/swicth_aimbot_touch"
                    android:background="@null"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="Aimbot Touch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UnusedAttribute,UseSwitchCompatOrMaterialXml"
                    tools:targetApi="m" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>